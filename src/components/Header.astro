---
interface Props {
    logo?: string; // e.g. "/logo.svg"
    logoAlt?: string; // accessible text
    prefix?: string;
    highlight?: string; // yellow word
    suffix?: string;
    ariaLabel?: string;
}
const {
    logo = "/logo.svg",
    logoAlt = "Cassino Autorizado",
    prefix = "CASSINO",
    highlight = "AUTORIZADO",
    suffix = "ONLINE",
    ariaLabel = `${prefix} ${highlight} ${suffix}`,
} = Astro.props as Props;
---

<header class="ribbon-header" aria-label={ariaLabel}>
    <div class="ribbon">
        <div class="ribbon-inner">
            <a href="/">
            <img
                class="brand-logo"
                src={logo}
                alt={logoAlt}
                width="140"
                height="28"
                decoding="async"
                loading="eager"
                
            /></a>
        </div>
    </div>
</header>

<style>
    /* Sticky, full-width header with a thin light rule on top */
    .ribbon-header {
        position: sticky;
        top: 0;
        z-index: 1000;

    backdrop-filter: blur(40px);    }

.ribbon{
  margin-top: 2rem;

  /* glass look */
  background: rgba(255,255,255,0.14);        /* light tint so blur shows */

}


    /* Centered inner container */
    .ribbon-inner {
        max-width: 1120px;
        margin: 0 auto;
        padding: 10px 16px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    /* Logo */
    .brand-logo {
        height: 46px;
        width: auto;
        display: block;
        object-fit: contain;
    }

    /* Text */
    .label {
        color: #fff;
        text-transform: uppercase;
        font-weight: 800;
        letter-spacing: 0.04em;
        font-size: 18px;
        line-height: 1;
        white-space: nowrap;
    }
    .label .hl {
        color: #ffd400;
    }

    @media (max-width: 640px) {
        .brand-logo {
            height: 2.5rem;
        }
        .label {
            font-size: 16px;
            letter-spacing: 0.03em;
        }
    }
</style>
