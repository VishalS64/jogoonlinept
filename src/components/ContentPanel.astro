---
interface Props {
  title?: string;
}
const { title } = Astro.props as Props;
const headingId = title
  ? `cp-${title.toLowerCase().replace(/[^a-z0-9]+/g, "-")}`
  : undefined;
---

<section class="content-panel" aria-labelledby={headingId}>
  {
    title && (
      <h2 id={headingId} class="cp-title">
        {title}
      </h2>
    )
  }
  <div class="cp-body">
    <slot />
  </div>
</section>

<style>
  /* Card shell */
  .content-panel {
    background: rgb(6 6 6 / 23%);
    border: 1px solid #6c6c6c;
    border-radius: 14px;
    box-shadow: 0 10px 28px rgba(2, 6, 23, 0.1);
    padding: 1rem;
    margin: 28px auto;
    color: #eaeaea;
    backdrop-filter: blur(20px);
  }

  /* Green section title with thin underline */
  .cp-title {
    margin: 0 0 14px;
    padding-bottom: 10px;
    border-bottom: 1px solid #d9dde3;
    color: #ffffff;
    font-family: "Helvetica Neue", Helvetica, Arial, system-ui, sans-serif;
    font-weight: 600;
    font-size: 36px; /* desktop look */
    line-height: 42px;
    letter-spacing: 0;
  }

  /* Figma body typography (applies everywhere inside) */
  .cp-body {
    font-family: "Helvetica Neue", Helvetica, Arial, system-ui, sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 20px;
    line-height: 28px;
    letter-spacing: 0;
    color: #ffffff;
  }
  .cp-body p {
    margin: 0 0 16px;
  }

  /* Lead line under the main title */
  .cp-body .lead {
    font-weight: 700;
    color: #2b2f33;
    margin: 0 0 18px;
  }

  /* ===== Numbered list like “1)” ===== */
  .cp-body ol.num {
    list-style: none;
    counter-reset: item;
    margin: 0 0 8px;
    padding: 0;
  }
  .cp-body ol.num > li {
    position: relative;
    counter-increment: item;
    padding-left: 2.2rem; /* space for 1) */
    margin: 0 0 16px;
  }
  .cp-body ol.num > li::before {
    content: counter(item) ")";
    position: absolute;
    left: 0;
    top: 0;
    width: 2rem;
    text-align: right;
    color: #ffffff;
    font:
      400 20px/28px "Helvetica Neue",
      Helvetica,
      Arial,
      system-ui,
      sans-serif;
  }

  /* Subhead (“Por que escolher…”) matches the mock */
  .cp-body .subhead {
    margin: 10px 0 8px;
    padding-top: 4px;
    font-weight: 700;
    color: #2b2f33;
  }

  /* Simple bullets under the subhead (default disc) */
  .cp-body ul.bul {
    list-style: disc;
    margin: 6px 0 0 1.35rem;
    padding: 0;
  }
  .cp-body ul.bul > li {
    margin: 0 0 12px;
  }
  .cp-body ul.bul > li::marker {
    color: #2b2f33;
  }

  /* ===== FAQ like your screenshot ===== */
  .cp-body .faq-title {
    margin: 18px 0 10px;
    padding-bottom: 10px;
    border-bottom: 1px solid #d9dde3;
    color: #bebebe;
    font-weight: 700;
    font-size: 28px;
    line-height: 28px;
    letter-spacing: 0;
    text-align: left;
  }

  .cp-body ul.faq {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .cp-body ul.faq > li {
    position: relative;
    padding-left: 26px; /* green dot space */
    margin: 14px 0 18px;
  }
  .cp-body ul.faq > li::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.7em; /* aligns to question baseline */
    width: 10px;
    height: 10px;
    border-radius: 9999px;
    background: #16a34a;
  }

  /* Question (bold green) */
  .cp-body .q {
    display: block;
    color: #16a34a;
    font-weight: 700;
    font-size: 20px;
    line-height: 28px;
    margin: 0 0 4px;
    text-align: left;
  }

  /* Answer (gray, 20/28) */
  .cp-body .a {
    margin: 0;
    color: #374151;
    font:
      400 20px/28px "Helvetica Neue",
      Helvetica,
      Arial,
      system-ui,
      sans-serif;
    letter-spacing: 0;
  }

  @media (max-width: 900px) {
    .cp-title {
      font-size: 1.6rem;
      line-height: 36px;
    }
    .cp-body {
      font-size: 18px;
      line-height: 26px;
      text-align: start;
    }
    .cp-body ol.num > li::before {
      font-size: 18px;
      line-height: 26px;
            text-align: start;

    }
    .cp-body .q,
    .cp-body .a {
      font-size: 18px;
      line-height: 26px;
      text-align: start;
    }
  }
</style>
