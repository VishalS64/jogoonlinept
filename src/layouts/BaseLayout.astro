---
import "../styles/global.css";
import SiteFooter from "../components/SiteFooter.astro";
import Header from "../components/Header.astro";
import "../styles/tailwind.css";

interface Props {
    title?: string;
}
const { title = "Melhores Sites de Cassino Online" } =
    Astro.props as Props;
const year = new Date().getFullYear();
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="robots" content="index,follow" />
        <meta name="format-detection" content="telephone=no" />
        <meta
            name="description"
            content="Compare cassinos online licenciados pelo SRIJ. Avaliações imparciais, segurança verificada, bónus justos e métodos de pagamento populares. Jogue com responsabilidade."
        />
    </head>
    <body class="site">
        <!-- Sticky ribbon header (full width) -->
        <Header
            logo="/logo.svg"
            logoAlt="Top10 Best Irish Casino"
            prefix="CASSINO"
            highlight="AUTORIZADO"
            suffix="ONLINE"
        />

        <main class="site-main">
            <slot />
        </main>

        <!-- New extended footer -->
        <SiteFooter
            logo="/logo.svg"
            logoAlt="Top10 Best Irish Casino"
            links={[
                { label: "Termos de Uso", href: "/terms-of-use" },
                {
                    label: "Jogo Responsável",
                    href: "/responsible-gambling",
                },
                { label: "Política de Privacidade", href: "/privacy-policy" },
            ]}
            badges={[
                {
                    src: "/badges/srij.png",
                    alt: "srij",
                    width: 44,
                    height: 44,
                    href: "https://www.srij.turismodeportugal.pt/pt/jogadores/jogo-responsavel",
                },
                {
                    src: "/badges/iaj.png",
                    alt: "iaj",
                    width: 74,
                    height: 32,
                    href: "https://www.iaj.pt/",
                },
                {
                    src: "/badges/egba.png",
                    alt: "egba",
                    width: 126,
                    height: 28,
                    href: "https://www.egba.eu/",
                },

                {
                    src: "/badges/jogoresponsavel.png",
                    alt: "jogoresponsavel",
                    width: 98,
                    height: 28,
                    href: "https://jogoresponsavel.pt/",
                },
                {
                    src: "/badges/sicad.png",
                    alt: "sicad",
                    width: 74,
                    height: 32,
                    href: "https://www.sicad.pt/",
                },
            ]}
        />

        <!-- (remove your old minimal footer block) -->
    </body>
</html>

<style>
    .site {
        /* UPDATED: background image + keep content scrollable */
        min-height: 100vh;
        background: #0a0f12 url("/bg.png") no-repeat center top / cover fixed;
        color: #fff;
        font-family:
            system-ui,
            -apple-system,
            "Segoe UI",
            Roboto,
            "Poppins",
            sans-serif;
    }

    /* Mobile/Safari performance: avoid janky fixed backgrounds */
    @media (max-width: 900px) {
        .site {
            background-attachment: scroll;
            background-position: center top;
        }
    }

    .disclosure {
        background: rgba(0, 0, 0, 0.95);
        color: #d1d5db;
        font-size: 11px;
        text-align: center;
        padding: 8px 10px;
        border-bottom: 1px solid #2e364d;
    }
    .disc-link {
        color: #60a5fa;
        text-decoration: underline;
    }
    .site-header {
        padding: 24px 0;
        text-align: center;
        border-bottom: 1px solid rgba(47, 224, 109, 0.8);
    }
    .site-title {
        margin: 0;
        font-weight: 800;
        font-size: 32px;
        color: #35e06d;
    }
    .site-main {
        max-width: 1120px;
        margin: 0 auto;
        padding: 0 16px;
    }
</style>
