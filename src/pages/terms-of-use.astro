    <style>
      /* High-contrast, page-scoped styles (no dark-mode inversion) */
      .legal {
        color: #c5c5c5; /* force dark text on light panel */
        font-family: "Helvetica Neue", Helvetica, Arial, system-ui, sans-serif;
        font-weight: 400;
        font-size: 20px;
        line-height: 1.6;
        text-align: justify;
      }
      .legal h2 {
        margin: 22px 0 10px;
        font-size: 26px;
        line-height: 1.25;
        font-weight: 700;
        color: #ffffff;
        scroll-margin-top: 96px;
      }
      .legal .meta {
        display: inline-block;
        margin: 0 0 14px;
        padding: 8px 12px;
        background: #f1f5f9;
        border-left: 4px solid #16a34a;
        border-radius: 8px;
        color: #0f172a;
      }
      .legal p { margin: 0 0 12px; }
      .legal ul,
      .legal ol { margin: 8px 0 16px 1.35rem; padding: 0; }
      .legal li { margin: 6px 0; }
      .legal ul ul,
      .legal ol ol { margin-top: 4px; margin-bottom: 4px; }

      /* Links */
      .legal a {
        color: #0ea5e9;
        text-decoration: underline;
        text-underline-offset: 2px;
      }
      .legal a:hover { text-decoration-thickness: 2px; }
      .legal a:focus-visible {
        outline: 2px dashed #0ea5e9;
        outline-offset: 2px;
      }

      /* Notice */
      .legal .notice {
        margin-top: 18px;
        padding: 12px 14px;
        background: #ecfdf5;
        border: 1px solid #a7f3d0;
        border-radius: 10px;
        text-align: left;
        color: #065f46;
      }

      .heads { margin-top: 1rem; font-size: 28px; }
      .navlink { text-decoration: underline; text-underline-offset: 4px; }

      /* Responsive */
      @media (max-width: 900px) {
        .legal { font-size: 18px; line-height: 1.55; }
        .legal h2 { font-size: 22px; }
      }

      /* Print */
      @media print {
        .legal a[href]::after { content: " (" attr(href) ")"; font-size: 85%; }
        .legal { text-align: left; }
        .legal .meta,
        .legal .notice { background: none; border-color: #000; }
      }
    </style>
  </ContentPanel>

  <!-- ONLY change: global page background image -->
  <style>
    :global(html) { min-height: 100%; }
    :global(body) {
      min-height: 100vh;
      /* Place bg.png in /public */
      background: #0a0f12 url("/bg.png") no-repeat center top / cover fixed;
      /* content remains fully scrollable; background stays put */
    }
  </style>
</BaseLayout>
